<script>
// JavaScript remains unchanged for functionality, but you can add more if needed
const services = {
  voter: ["Aadhaar Card", "Address Proof", "Passport Size Photo"],
  pan: ["Aadhaar Card", "Passport Size Photo", "Mobile Number"],
  aadhaar: ["Aadhaar Card", "Address Proof", "Mobile Number"],
  income: ["Aadhaar Card", "Ration Card", "Self Declaration"],
  caste: ["Aadhaar Card", "Father Caste Certificate", "Ration Card"],
  domicile: ["Aadhaar Card", "Address Proof"],
  ration: ["Aadhaar of all family members", "Old Ration Card (if any)"],
  ayushman: ["Aadhaar Card", "Ration Card"],
  passport: ["Aadhaar Card", "Address Proof", "Birth Proof"],
  dl: ["Aadhaar Card", "Age Proof", "Address Proof"],
  resume: ["Education Details", "Photo", "Experience (if any)"]
};

function openService(key, btn) {
  document.querySelectorAll('.service-btn').forEach(b => b.classList.remove('active'));
  btn.classList.add('active');
  const box = document.getElementById("docBox");
  const docs = document.getElementById("docs");
  const title = document.getElementById("serviceTitle");
  title.innerHTML = `<i class="fas fa-file-alt"></i> ${btn.innerText} – Required Documents`;
  docs.innerHTML = "";
  services[key].forEach(d => {
    const div = document.createElement("div");
    div.className = "doc";
    div.innerHTML = `<label><i class="fas fa-upload"></i> ${d}</label><input type="file" name="files" accept=".jpg,.png,.pdf" required>`;
    docs.appendChild(div);
  });
  box.style.display = "block";
}

function submitForm() {
  const form = document.getElementById("serviceForm");
  const name = document.getElementById("name").value.trim();
  const email = document.getElementById("email").value.trim();
  const mobile = document.getElementById("mobile").value.trim();
  const errorMsg = document.getElementById("errorMsg");
  const successMsg = document.getElementById("successMsg");
  const loading = document.getElementById("loading");
  errorMsg.innerText = "";
  successMsg.innerText = "";
  
  if (!name || !email || !mobile) {
    errorMsg.innerText = "Please fill all required fields.";
    return;
  }
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!emailRegex.test(email)) {
    errorMsg.innerText = "Please enter a valid email address.";
    return;
  }
  const mobileRegex = /^[6-9]\d{9}$/;
  if (!mobileRegex.test(mobile)) {
    errorMsg.innerText = "Please enter a valid 10-digit mobile number starting with 6-9.";
    return;
  }
  
  const formData = new FormData(form);
  formData.append('service', document.querySelector('.service-btn.active').innerText);
  loading.style.display = "block";
  fetch('/submit', { method: 'POST', body: formData })
    .then(response => response.text())
    .then(data => {
      loading.style.display = "none";
      successMsg.innerText = data;
      form.reset();
      document.getElementById("docBox").style.display = "none";
    })
    .catch(error => {
      loading.style.display = "none";
      errorMsg.innerText = "Error submitting form. Try again.";
      console.error(error);
    });
}

function resetForm() {
  document.getElementById("serviceForm").reset();
  document.getElementById("docBox").style.display = "none";
  document.querySelectorAll('.service-btn').forEach(b => b.classList.remove('active'));
  document.getElementById("errorMsg").innerText = "";
  document.getElementById("successMsg").innerText = "";
}

function toggleSidebar() {
  const sidebar = document.querySelector('.sidebar');
  sidebar.classList.toggle('collapsed');
}
</script>
</body>
